@model IEnumerable<SearchEngine.Models.Document>
@{
    ViewData["Title"] = "Manage Documents";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Documents</h2>
        <div>
            <a href="@Url.Action("Index", "Search")" class="btn btn-secondary">Back to Search</a>
            <a href="@Url.Action("Create")" class="btn btn-primary">Add Document</a>
        </div>
    </div>

    <div class="mb-3">
        <form method="post" asp-action="IndexAll" class="d-inline">
            <button type="submit" class="btn btn-success">Index All</button>
        </form>
        <form method="post" asp-action="ClearIndex" class="d-inline">
            <button type="submit" class="btn btn-warning" onclick="return confirm('Clear index?')">Clear Index</button>
        </form>
        <span class="badge bg-info ms-2">Total: @Model.Count()</span>
    </div>

    @if (Model.Any())
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Content</th>
                    <th>File</th>
                    <th>Date</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var doc in Model)
                {
                    <tr>
                        <td><strong>@doc.Title</strong></td>
                        <td><small>@(doc.Content.Length > 80 ? doc.Content.Substring(0, 80) + "..." : doc.Content)</small></td>
                        <td>
                            @if (!string.IsNullOrEmpty(doc.FileName))
                            {
                                <small>@doc.FileName</small>
                            }
                            else
                            {
                                <small class="text-muted">-</small>
                            }
                        </td>
                        <td><small>@doc.DateAdded.ToLocalTime().ToString("MM/dd/yy")</small></td>
                        <td>
                            @if (doc.IsIndexed)
                            {
                                <span class="badge bg-success">Indexed</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Not Indexed</span>
                            }
                        </td>
                        <td>
                            <a href="@Url.Action("Details", new { id = doc.Id })" class="btn btn-sm btn-info">View</a>
                            
                            @if (!doc.IsIndexed)
                            {
                                <form method="post" asp-action="IndexDocument" asp-route-id="@doc.Id" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-success">Index</button>
                                </form>
                            }
                            
                            <form method="post" asp-action="Delete" asp-route-id="@doc.Id" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Delete?')">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">
            No documents. <a href="@Url.Action("Create")">Add your first document</a>
        </div>
    }
</div>
