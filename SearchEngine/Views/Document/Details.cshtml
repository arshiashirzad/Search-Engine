@model SearchEngine.Models.Document
@{
    ViewData["Title"] = "Document Details";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="mb-3">
                <a href="@Url.Action("Index")" class="btn btn-secondary">‚Üê Back</a>
            </div>

            <div class="card">
                <div class="card-header">
                    <h3>@Model.Title</h3>
                </div>
                <div class="card-body">
                    <p><strong>ID:</strong> <code>@Model.Id</code></p>
                    <p><strong>Status:</strong> 
                        @if (Model.IsIndexed)
                        {
                            <span class="badge bg-success">Indexed</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Not Indexed</span>
                        }
                    </p>
                    <p><strong>Date Added:</strong> @Model.DateAdded.ToLocalTime().ToString("F")</p>
                    @if (!string.IsNullOrEmpty(Model.FileName))
                    {
                        <p><strong>File:</strong> @Model.FileName (@FormatFileSize(Model.FileSize))</p>
                    }
                    <hr/>
                    <p><strong>Content:</strong></p>
                    <div class="bg-light p-3 rounded" style="white-space: pre-wrap; max-height: 400px; overflow-y: auto;">@Model.Content</div>
                </div>
                <div class="card-footer">
                    @if (!Model.IsIndexed)
                    {
                        <form method="post" asp-controller="Document" asp-action="IndexDocument" asp-route-id="@Model.Id" class="d-inline">
                            <button type="submit" class="btn btn-success">Index This Document</button>
                        </form>
                    }
                    <form method="post" asp-controller="Document" asp-action="Delete" asp-route-id="@Model.Id" class="d-inline">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Delete?')">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    string FormatFileSize(long bytes)
    {
        if (bytes == 0) return "0 B";
        string[] sizes = { "B", "KB", "MB", "GB" };
        int i = (int)Math.Floor(Math.Log(bytes) / Math.Log(1024));
        return Math.Round(bytes / Math.Pow(1024, i), 2) + " " + sizes[i];
    }
}
