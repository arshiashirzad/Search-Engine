@model List<string>
@{
    ViewData["Title"] = "Index Structure";
}

<div class="main-container">
    <div class="page-header">
        <div>
            <h1 class="page-title">Inverted Index</h1>
            <p class="page-subtitle">All indexed terms with document frequency</p>
        </div>
        <div class="page-actions">
            <a href="@Url.Action("TreeVisualization")" class="btn-modern btn-secondary-modern">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="3" y="3" width="7" height="7" rx="1"></rect>
                    <rect x="14" y="3" width="7" height="7" rx="1"></rect>
                    <rect x="3" y="14" width="7" height="7" rx="1"></rect>
                    <rect x="14" y="14" width="7" height="7" rx="1"></rect>
                </svg>
                View Tree
            </a>
        </div>
    </div>

    <div class="stats-bar" style="justify-content: flex-start; gap: 3rem;">
        <div class="stat-item" style="align-items: flex-start;">
            <span class="stat-value">@ViewBag.TotalTerms</span>
            <span class="stat-label">Unique Terms</span>
        </div>
        <div class="stat-item" style="align-items: flex-start;">
            <span class="stat-value">@ViewBag.TotalDocuments</span>
            <span class="stat-label">Documents</span>
        </div>
    </div>

    <div class="card-modern">
        <div class="card-header-modern" style="display: flex; align-items: center; justify-content: space-between;">
            <div style="display: flex; align-items: center; gap: 0.5rem;">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="8" y1="6" x2="21" y2="6"></line>
                    <line x1="8" y1="12" x2="21" y2="12"></line>
                    <line x1="8" y1="18" x2="21" y2="18"></line>
                    <line x1="3" y1="6" x2="3.01" y2="6"></line>
                    <line x1="3" y1="12" x2="3.01" y2="12"></line>
                    <line x1="3" y1="18" x2="3.01" y2="18"></line>
                </svg>
                All Indexed Terms
            </div>
            <span class="badge-modern badge-primary">Alphabetically Sorted</span>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="term-grid">
                    @foreach (var term in Model)
                    {
                        var docCount = ViewBag.Stats[term];
                        <div class="term-badge">
                            <span class="term-text">@term</span>
                            <span class="term-count">@docCount doc@(docCount > 1 ? "s" : "")</span>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="empty-state" style="padding: 3rem 2rem;">
                    <div class="empty-state-icon">
                        <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                            <line x1="8" y1="6" x2="21" y2="6"></line>
                            <line x1="8" y1="12" x2="21" y2="12"></line>
                            <line x1="8" y1="18" x2="21" y2="18"></line>
                            <line x1="3" y1="6" x2="3.01" y2="6"></line>
                            <line x1="3" y1="12" x2="3.01" y2="12"></line>
                            <line x1="3" y1="18" x2="3.01" y2="18"></line>
                        </svg>
                    </div>
                    <h3 class="empty-state-title">No Terms Indexed</h3>
                    <p class="empty-state-text">Add and index some documents to populate the inverted index.</p>
                    <a href="@Url.Action("Index", "Document")" class="btn-modern btn-primary-modern">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"></path>
                            <polyline points="14 2 14 8 20 8"></polyline>
                        </svg>
                        Go to Documents
                    </a>
                </div>
            }
        </div>
    </div>

    <div class="card-modern" style="margin-top: 1.5rem;">
        <div class="card-header-modern">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="margin-right: 8px; vertical-align: -2px;">
                <circle cx="12" cy="12" r="10"></circle>
                <line x1="12" y1="16" x2="12" y2="12"></line>
                <line x1="12" y1="8" x2="12.01" y2="8"></line>
            </svg>
            About the Inverted Index
        </div>
        <div class="card-body">
            <p style="font-size: 0.9375rem; color: var(--gray-600); line-height: 1.7; margin: 0;">
                The inverted index maps each unique term to the list of documents containing it.
                Terms are normalized using <strong>Porter Stemmer</strong> to group word variations (e.g., "running", "runs", "ran" all map to "run").
                The index is stored in a <strong>B+ Tree</strong> data structure for efficient range queries and O(log n) lookups.
                Document frequency shown indicates how many documents contain each term.
            </p>
        </div>
    </div>
</div>
