@model SearchEngine.Analytics.AnalyticsSummary
@{
    ViewData["Title"] = "Statistics";
}

<div class="container mt-4">
    <h2 class="mb-4">Search Statistics</h2>

    <div class="row">
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h3>@Model.TotalSearches</h3>
                    <p class="text-muted mb-0">Total Searches</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h3>@Model.UniqueQueries</h3>
                    <p class="text-muted mb-0">Unique Queries</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h3>@Model.AverageResultCount.ToString("F1")</h3>
                    <p class="text-muted mb-0">Avg Results</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h3>@Model.AverageSearchTimeMs.ToString("F0") ms</h3>
                    <p class="text-muted mb-0">Avg Time</p>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <a href="@Url.Action("Index")" class="btn btn-primary">Back to Search</a>
    </div>
</div>
